
<form class="d-flex" method="POST" action="/" novalidate>
      <a id="main_button" class="btn btn-warning pull-right" type="button" href="/"> Logout</a>
      
  </form>

<div class="row">
  <div class="col-6"><h3> Results</h3></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/teacher/addresult" type="button" class="btn btn-primary">Add New Result</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Roll No.</th>
      <th scope="col"> Student Name</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Score</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
    
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.rollno}}</th>
      <td>{{this.name}}</td>
      <td>{{this.dob}}</td>
      <td>{{this.score}}</td>
      <td class="text-end">
          <a href="/teacher/viewresult/{{this.rollno}}" type="button" class="btn btn-light btn small"><i class="bi bi-eye"></i>View</a>
          <a href="/teacher/editresult/{{this.rollno}}" type="button" class="btn btn-light btn small"><i class="bi bi-pencil"></i>Edit</a>
          <a href="/teacher/delete/{{this.rollno}}" type="button" class="btn btn-light btn small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>